substep "Configuring MeetingBar"
open -g -a MeetingBar

for i in {1..100}; do
    if [ -f "${HOME}/Library/Containers/leits.MeetingBar/Data/Library/Preferences/leits.MeetingBar.plist" ]; then
        break
    fi
    sleep 0.1
    if [ "${i}" -eq 100 ]; then
        err "Configuration failed to load ➡ exiting"
        exit 1
    fi
done

osascript -e 'quit app "MeetingBar"'
defaults import leits.MeetingBar "${HOME}/.fettle-it/configs/meetingbar/leits.MeetingBar.plist"
open -a MeetingBar
substep_done "Configuring MeetingBar ➡ complete"
